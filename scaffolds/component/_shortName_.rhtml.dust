<c:template
    xmlns:c="core"
    xmlns:w="widgets"
    name="{name}"
    params="name,count">
    
    <div class="{shortNameDashSeparated}"{?ifWidget} w:widget="{name}/{shortName}Widget"{/ifWidget}>
        <h1>{name}</h1>
        Hello $name! You have $count new messages.
    </div>

</c:template>